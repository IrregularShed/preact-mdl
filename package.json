{
  "name": "preact-mdl",
  "amdName": "preactMdl",
  "version": "0.2.1",
  "description": "A collection of Preact Components that encapsulate Google's Material Design Lite.",
  "main": "dist/preact-mdl.js",
  "minified:main": "dist/preact-mdl.min.js",
  "scripts": {
    "build": "npm-run-all transpile minify size",
    "transpile": "rollup -c rollup.config.js",
    "minify": "uglifyjs $npm_package_main -cm -o $npm_package_minified_main -p relative --in-source-map ${npm_package_main}.map --source-map ${npm_package_minified_main}.map",
    "size": "echo \"gzip size: $(gzip-size $npm_package_minified_main | pretty-bytes)\"",
    "test": "npm-run-all lint build test:karma",
    "lint": "eslint {src,test}",
    "test:karma": "karma start --single-run",
    "prepublish": "npm-run-all build test",
    "release": "npm run -s build && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish"
  },
  "keywords": [
    "preact",
    "mdl",
    "material design"
  ],
  "author": "Jason Miller <jason@developit.ca>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/developit/preact-mdl.git"
  },
  "bugs": {
    "url": "https://github.com/developit/preact-mdl/issues"
  },
  "homepage": "https://github.com/developit/preact-mdl",
  "peerDependencies": {
    "preact": "^1.5.0 || ^2.x"
  },
  "optionalDependencies": {
    "preact": "^2.x"
  },
  "devDependencies": {
    "babel-core": "^6.4.5",
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.1",
    "babel-plugin-transform-class-properties": "^6.4.0",
    "babel-plugin-transform-es2015-classes": "^6.3.15",
    "babel-plugin-transform-object-rest-spread": "^6.3.13",
    "babel-plugin-transform-react-jsx": "^6.3.13",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-es2015-loose-rollup": "^7.0.0",
    "babel-preset-es2015-rollup": "^1.0.0",
    "babel-preset-stage-0": "^6.3.13",
    "chai": "^3.4.1",
    "eslint": "^1.10.3",
    "gzip-size-cli": "^1.0.0",
    "karma": "^0.13.19",
    "karma-chai": "^0.1.0",
    "karma-chai-sinon": "^0.1.5",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.5",
    "karma-phantomjs-launcher": "^0.2.3",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "mkdirp": "^0.5.1",
    "mocha": "^2.3.4",
    "npm-run-all": "^1.5.0",
    "phantomjs": "^1.9.19",
    "postcss-discard-comments": "^2.0.3",
    "preact": "^2.7.3",
    "preact-jsx-chai": "^1.0.0",
    "pretty-bytes-cli": "^1.0.0",
    "rollup": "^0.25.1",
    "rollup-plugin-babel": "^2.2.0",
    "rollup-plugin-commonjs": "^2.2.0",
    "rollup-plugin-npm": "^1.3.0",
    "rollup-plugin-postcss": "0.0.27",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "uglify-js": "^2.6.1",
    "webpack": "^1.12.12"
  },
  "dependencies": {
    "material-design-lite": "^1.0.6"
  }
}
